			Label:
				id:_lb_3
				text: '控制杆'
				font_name:'/usr/share/fonts/truetype/wqy/wqy-microhei.ttc'
				color: 1,1,1,1
				font_size: 32
				bkcolor:[1,0,0,.5]
				canvas:
					Color:
						rgba:self.bkcolor
					Ellipse:
						pos:self.pos[0]+self.size[0]/7,self.pos[1]-self.size[0]/6
						size:self.size[0]*0.75,self.size[0]*0.7

		GridLayout:
			cols: 3
			spacing:10
			padding:10,50,10,10
			pos_hint:{'x':0,'y':.31}

			Label:
				text:'面条长度'
				font_size: 32
				font_name:'/usr/share/fonts/truetype/wqy/wqy-microhei.ttc'
			Label:
				text:'时间'
				font_size: 40
				font_name:'/usr/share/fonts/truetype/wqy/wqy-microhei.ttc'
			Label:
				text:'份数'
				font_size: 40
				font_name:'/usr/share/fonts/truetype/wqy/wqy-microhei.ttc'

		GridLayout:
			cols: 3
			spacing:10
			padding:10,50,10,10
			size_hint:1,.35
			pos_hint:{'x':0,'y':.45}

			Button:
				id:_time2_ba
				text:'+'
				font_size: 40
				font_name:'/usr/share/fonts/truetype/wqy/wqy-microhei.ttc'
				color: .8,.9,0,1
				on_press:root.press_am("time2",1)
			Button:
				id:_time5_ba
				text:'+'
				font_size: 40
				font_name:'/usr/share/fonts/truetype/wqy/wqy-microhei.ttc'
